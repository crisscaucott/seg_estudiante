<%= form_for(:asignaturas, url: update_asignatura_path, html: {id: 'asignaturas_form', format: :json}) do |f| %>
  <table id="asignaturas_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>Código</th>
        <th>Créditos</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% asignaturas.each_with_index do |a, index| %>
        <tr data-asignatura-id="<%= a.id %>">
          <%= f.hidden_field(:id, value: a.id) %>
          <%= f.hidden_field(:carrera_id, value: carrera_id) %>
          <%= hidden_field_tag(:row_edited, 0, class: 'row_edited', id: nil) %>
          <%= hidden_field_tag(:to_delete, 0, class: 'row_delete', id: nil) %>
          <td><%= index + 1 %></td>
          <td>
            <span><%= a.nombre %></span>
            <%= f.text_field(:nombre, value: a.nombre, class: 'form-control hidden', placeholder: :nombre) %>
          </td>
          <td>
            <span><%= a.codigo %></span>
            <%= f.text_field(:codigo, value: a.codigo, class: 'form-control hidden', placeholder: :codigo) %>
          </td>
          <td>
            <span><%= a.creditos %></span>
            <%= f.number_field(:creditos, value: a.creditos, class: 'form-control hidden', placeholder: :creditos) %>
          </td>
          <td class="text-center">
            <%= button_tag('Editar', type: 'button', class: 'btn btn-sm btn-primary edit_btn') %>
            <%= button_tag('Eliminar', type: 'button', class: 'btn btn-sm btn-danger delete_btn') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= f.submit("Guardar", disabled: true, class: 'btn btn-success') %>
<% end %>