      <div class="<%= options[:div_class] %>" id="alertas" <%= options[:div_expanded] %> >
          <%= link_to('Configurar', config_alertas_path, class: "list-group-item list-group-item-action" + setSubActive(config_alertas_path)) %>
      </div>
    </div>
  </div>
</div>

<div class="col-sm-8">
	<% if !local_assigns[:partial].nil? %>
		<%= render partial: partial, locals: local_assigns %>
	<% end %>
</div>