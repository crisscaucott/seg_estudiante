<!DOCTYPE html>
<html>
<head>
  <title>SegEstudiante</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= yield :css %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default navbar-static-top" id="main-navbar">
  <div class="container-fluid">
    <nav>
      <div class="navbar-header">
        <a href="/"> <i class="fa fa-map-marker fa-lg"></i> 
          <%= image_tag('central.png') %>
        </a>
      </div>
      <div class="col-sm-5 col-sm-offset-3" style="display: inline-block;">
        <h2>Sistema de información UCEN22</h2>
      </div>

      <% if user_signed_in? %>
        <div class="nav pull-right" style="margin-top: 20px; display: flex;">
          <p>Hola, <%= current_user.name %> | <%= link_to "Salir", destroy_user_session_path, class: 'navbar-link' %></p>
        </div>
      <% end %>
    </nav>
  </div>
</div>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
</div>

<div class="container">
  <%= yield %>
</div>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= yield :javascript %>
</body>
</html>
