<div class="col-sm-12">
  <%= form_for(tutor_usr, url: set_asociations_tutores_path, html: {id: 'tutores_est_form', format: :json}) do |f| %>
    <div class="text-center">
    	<%= f.submit("Guardar", class: 'btn btn-success') %>
    </div>
    <%= fields_for(:users) do |ff| %>
			<div class="col-sm-6">
				<div class="form-top text-center">
		    	<h3>Tutores</h3>
		    </div>
		    <div class="funkyradio tutor_est_containers">
					<% tutores.each_with_index do |tutor, index| %>
			      <div class="funkyradio-primary">
			      	<%= ff.radio_button(:id, tutor.id, id: tutor.class.name.downcase + '_' + index.to_s) %>
			      	<%= ff.label(:bla, tutor.name, for: tutor.class.name.downcase + '_' + index.to_s) %>
			      </div>
					<% end %>
		    </div>
			</div>

			<%= ff.fields_for(:estudiantes) do |fff| %>
				<div class="col-sm-6">
					<div class="form-top text-center">
			    	<h3>Estudiantes</h3>
			    </div>

			    <div class="tutor_est_containers">
			    	<ul id="check-list-box" class="list-group checked-list-box">
							<%= fff.collection_check_boxes(:id, estudiantes, :id, :nombre, {:include_hidden => false}) do |c| %>
			          <li class="list-group-item">
								<span class="state-icon glyphicon glyphicon-unchecked">
								</span>
								<%= c.label %>
								<%= c.check_box(class: 'hidden') %>
								</li>
							<% end -%>
			      </ul>
			    </div>

		    </div>
	    <% end -%>
		<% end -%>
	<% end %>
</div>